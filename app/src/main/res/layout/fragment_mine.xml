<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.MineFragment"
    android:background="@color/bg_gray">

    <RelativeLayout
        android:id="@+id/mine_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:layout_centerInParent="true"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="@color/black"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mine_relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mine_relativeLayout"
        android:background="@color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_title_bg"/>
        <ImageView
            android:id="@+id/mine_tx"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/mine_tx"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/mine_nickname"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="用户昵称"
            android:layout_below="@+id/mine_tx"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/mine_gy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="励志格言励志格言励志格言励志格言"
            android:layout_below="@+id/mine_nickname"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:ellipsize="end"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mine_msg"
            android:layout_below="@+id/mine_gy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mine_note"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/mine_relativeLayout2"
        android:background="@color/white">
        <ImageView
            android:id="@+id/note_img"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/mine_note"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="我的笔记"
            android:layout_toEndOf="@+id/note_img"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/mine_jt"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line_gray"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mine_answer"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/mine_note"
        android:background="@color/white">
        <ImageView
            android:id="@+id/answer_img"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/mine_answer"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="课程答疑"
            android:layout_toEndOf="@+id/answer_img"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/mine_jt"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line_gray"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mine_comment"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/mine_answer"
        android:background="@color/white">
        <ImageView
            android:id="@+id/comment_img"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/mine_comment"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="我的评价"
            android:layout_toEndOf="@+id/comment_img"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/mine_jt"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line_gray"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mine_info"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/mine_comment"
        android:background="@color/white">
        <ImageView
            android:id="@+id/comment_info"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/mine_info"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="消息通知"
            android:layout_toEndOf="@+id/comment_info"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/mine_jt"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mine_about"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/mine_info"
        android:background="@color/white"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/about_img"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/mine_about"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="版本信息"
            android:layout_toEndOf="@+id/about_img"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/mine_jt"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line_gray"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mine_set"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/mine_about"
        android:background="@color/white">
        <ImageView
            android:id="@+id/set_info"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/mine_set"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="设置"
            android:layout_toEndOf="@+id/set_info"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/mine_jt"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"/>
    </RelativeLayout>

</RelativeLayout>