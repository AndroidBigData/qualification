<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/round_white_shape">

    <LinearLayout
        android:id="@+id/msg_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/is_read"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/circular_red_shape"
            android:layout_marginStart="3dp"/>
        <TextView
            android:id="@+id/msg_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【通知公告】"
            android:textColor="@color/note_title"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/msg_tetle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="通知公告"
            android:textColor="@color/note_title"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="18dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/msg_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msg_linearLayout"
        android:text="通知内容"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="12sp"
        android:textColor="@color/note"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="18dp"/>

    <TextView
        android:id="@+id/msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018.8.13 11:05"
        android:textColor="@color/note"
        android:textSize="10sp"
        android:layout_below="@+id/msg_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/msg_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="来自:中教网盟"
        android:textColor="@color/note"
        android:textSize="10sp"
        android:layout_alignBottom="@+id/msg_time"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"/>

</RelativeLayout>
