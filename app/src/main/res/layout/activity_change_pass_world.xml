<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.ChangePassWorldActivity">

    <include
        layout="@layout/basic_title"
        android:id="@+id/title"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"
        android:layout_below="@+id/title"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <EditText
        android:id="@+id/pass_old"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入原密码"
        android:layout_below="@+id/title"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="14sp"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/pass_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入新密码"
        android:layout_below="@+id/pass_old"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="14sp"/>
    <EditText
        android:id="@+id/pass_new2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请确认新密码"
        android:layout_below="@+id/pass_new"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/change_pass"
        android:layout_width="185dp"
        android:layout_height="40dp"
        android:text="确认修改"
        android:layout_below="@+id/pass_new2"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_btn_shape"
        android:textColor="@color/white"
        android:textSize="16sp"/>

</RelativeLayout>