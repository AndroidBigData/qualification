<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.MineQAActivity">

    <include
        layout="@layout/basic_title"
        android:id="@+id/relativeLayout"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/courseanswer_tablayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/colorAccent"
        app:tabTextColor="@color/text_color_gray"
        android:layout_below="@+id/relativeLayout"
        android:background="@color/white"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/courseanswer_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/courseanswer_tablayout"/>

</RelativeLayout>